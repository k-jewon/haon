<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.haon.book.admin.BookAdminDAO">
	<select id="getBookListAD" resultType="Book">
		select * from haon_book
	</select>
	<select id="getSearchListAD" resultType="Book">
		select * from haon_book
		where 1 = 1
		<choose>
			<when test="type != null and type.equals('user_Id')">
				and user_id like concat('%', #{keyword}, '%')
			</when>
			<when test="type != null and type.equals('room_Id')">
				and room_id like concat('%', #{keyword}, '%')
			</when>
			<when test="type != null and type.equals('book_status')">
				and book_status like concat('%', #{keyword}, '%')
			</when>
			<when test="type != null and type.equals('book_reserveDate')">
				and book_reserveDate like concat('%', #{keyword}, '%')
			</when>
		</choose>
	</select>
</mapper>